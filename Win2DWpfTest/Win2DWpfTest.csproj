<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows10.0.20348.0</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <SupportedOSPlatformVersion>10.0.19041.0</SupportedOSPlatformVersion>
    <Platforms>AnyCPU;x64</Platforms>
	  <CsWinRTIncludes>
		  Microsoft.Graphics.Canvas;
		  Windows.UI.Colors;
		  Windows.UI.IColors;
		  Windows.UI.Xaml;
		  Windows.UI.Text;
	  </CsWinRTIncludes>
	  <CsWinRTExcludes>
		  Microsoft.Graphics.Canvas.UI.Xaml;
		  Microsoft.Graphics.Canvas.Printing;
	  </CsWinRTExcludes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.VCRTForwarders.140" Version="1.0.7" />
    <PackageReference Include="Microsoft.Windows.CsWinRT" Version="2.0.1" />
    <PackageReference Include="Win2D.uwp" Version="1.27.0-preview2-CI-230125.0" />
  </ItemGroup>

</Project>
